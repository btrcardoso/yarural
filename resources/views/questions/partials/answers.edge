@if(answers)
    <p class="font-sans font-bold text pt-4">Respostas</p>
@endif

@each(answer in answers)
    <br>
    <div class="bg-base-200 rounded shadow p-4">

        <div class="flex justify-between">
            <!-- Image and username -->
            @!component('components/imageAndUsername', {
                username: answer.user.name
            })

            <!-- Votes -->
            @!component('components/votes',{
                votes:'-2'
            })
        </div>

        <div class="p-4">
            <!-- Description -->
            <p class="break-words">
                {{answer.description}}
            </p>
        </div>
      

        <div class="flex justify-between">
            
            <div>
                <!-- Source -->
                <label class="label">
                    <span class="label-text-alt">Fonte: {{ answer.source ? answer.source : 'NÃ£o especificada' }}</span>
                </label>
            </div>

            <div>
                {{--  Date, Delete Button  --}}
                @!component('components/dateAndDeleteButton',{
                    user: {id: answer.userId},
                    routeNameButtonDelete: 'answer.destroy',
                    idObjectDeleted: answer.id,
                    date: answer.date
                })
            </div>
            
        </div>

    </div>
@end